<Window x:Class="SPKWithTopsis.Forms.AddPhotoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPKWithTopsis.Forms"
        mc:Ignorable="d"
        Title="Tambah Photo" Height="328.149" Width="348.586">
    <Grid Margin="15">
        <Grid.Background>
            <ImageBrush ImageSource="/SPKWithTopsis;component/green.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Border Margin="10" Background="#FFEEEEEE">
            <Image Margin="5" x:Name="image1"  Stretch="Fill"/>
        </Border>

        <Button x:Name="button" Click="Change_click" Content="Ubah Foto" HorizontalAlignment="Right" Margin="0,0,103.4,10.8" Grid.Row="1" Width="75" Height="42" VerticalAlignment="Bottom" Background="#FFDEE7E1"/>
        <Button x:Name="button_Copy" Click="SaveImage" Content="Simpan" HorizontalAlignment="Right" Margin="0,0,10.4,10.8" Grid.Row="1" Width="75" Height="42" VerticalAlignment="Bottom" Background="#FFDEE7E1"/>

    </Grid>
</Window>
